{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"parserOptions": {
		"sourceType": "module"
	},
	"plugins": ["html", "prettier"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "windows"],
		"quotes": ["error", "single"],
		"semi": ["error", "never"],
		"prettier/prettier": [
			"error",
			{ "singleQuote": true, "useTabs": true, "semi": false }
		]
	}
}
